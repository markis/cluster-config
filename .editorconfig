# =============================================================================
# EditorConfig - https://editorconfig.org/
# =============================================================================
# This file defines consistent coding styles across different editors and IDEs.
# Most editors support EditorConfig natively or via plugins.
# =============================================================================

# Top-most EditorConfig file
root = true

# =============================================================================
# Default settings for all files
# =============================================================================
[*]
# Use UTF-8 encoding
charset = utf-8

# Use Unix-style line endings (LF)
end_of_line = lf

# Ensure file ends with a newline
insert_final_newline = true

# Remove trailing whitespace
trim_trailing_whitespace = true

# Default indentation: 2 spaces
indent_style = space
indent_size = 2

# =============================================================================
# YAML Files (Kubernetes, Helm, ArgoCD, Kustomize)
# =============================================================================
[*.{yaml,yml}]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# =============================================================================
# Helm Templates
# =============================================================================
[*.tpl]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# =============================================================================
# Helm Values Files
# =============================================================================
[values*.yaml]
indent_style = space
indent_size = 2

# =============================================================================
# Kustomization Files
# =============================================================================
[kustomization.yaml]
indent_style = space
indent_size = 2

# =============================================================================
# Markdown Files
# =============================================================================
[*.md]
indent_style = space
indent_size = 2
# Markdown uses trailing spaces for line breaks, so don't trim
trim_trailing_whitespace = false
insert_final_newline = true

# =============================================================================
# JSON Files
# =============================================================================
[*.json]
indent_style = space
indent_size = 2
insert_final_newline = true

# =============================================================================
# Shell Scripts
# =============================================================================
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# =============================================================================
# Makefiles (require tabs)
# =============================================================================
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# =============================================================================
# Dockerfiles
# =============================================================================
[Dockerfile*]
indent_style = space
indent_size = 2

# =============================================================================
# Git Configuration Files
# =============================================================================
[.gitignore]
indent_style = space
indent_size = 2

[.gitattributes]
indent_style = space
indent_size = 2

# =============================================================================
# TOML Files (used by some tools)
# =============================================================================
[*.toml]
indent_style = space
indent_size = 2

# =============================================================================
# HCL Files (Terraform, if used)
# =============================================================================
[*.{hcl,tf,tfvars}]
indent_style = space
indent_size = 2
